<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Button
        android:id="@+id/btn_sharedpreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sharedpreferences"
        android:textAllCaps="false"/>
    <Button
    android:id="@+id/btn_file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="file内部存储"
    android:textAllCaps="false"
    android:layout_below="@id/btn_sharedpreferences"/>
    <Button
        android:id="@+id/btn_fileout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="file外部存储"
        android:textAllCaps="false"
        android:layout_below="@id/btn_file"/>

</RelativeLayout>
